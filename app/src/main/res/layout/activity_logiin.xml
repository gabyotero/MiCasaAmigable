<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logiin">

    <Button
        android:id="@+id/btn_registro2"
        android:layout_width="164dp"
        android:layout_height="63dp"
        android:background="@color/colorbtnsPantalla1"
        android:onClick="NewRegistro"
        android:text="@string/btn_registro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/casa"
        android:layout_width="462dp"
        android:layout_height="387dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/la_casa_amigable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/login1"
        android:layout_width="338dp"
        android:layout_height="92dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/casa"
        app:layout_constraintVertical_bias="0.477">

        <TextView
            android:id="@+id/user_log"
            android:layout_width="109dp"
            android:layout_height="36dp"
            android:text="Usuario" />

        <EditText
            android:id="@+id/edt_user_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login2"
        android:layout_width="345dp"
        android:layout_height="84dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608">

        <TextView
            android:id="@+id/pass_log"
            android:layout_width="124dp"
            android:layout_height="31dp"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/edt_pass_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/registro1"
        android:layout_width="334dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74">

        <TextView
            android:id="@+id/user_reg"
            android:layout_width="91dp"
            android:layout_height="30dp"
            android:text="Usuario" />

        <EditText
            android:id="@+id/edt_user_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/registro2"
        android:layout_width="346dp"
        android:layout_height="77dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863">

        <TextView
            android:id="@+id/pass_reg"
            android:layout_width="103dp"
            android:layout_height="32dp"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/edt_pass_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login3"
        android:layout_width="329dp"
        android:layout_height="92dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="169dp"
            android:layout_height="66dp"
            android:background="@color/colorbtnsPantalla1"
            android:onClick="Login"
            android:text="@string/btn_iniciar" />

        <Button
            android:id="@+id/btn_registro"
            android:layout_width="164dp"
            android:layout_height="63dp"
            android:background="@color/colorbtnsPantalla1"
            android:onClick="registro"
            android:text="@string/btn_registro" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>